<div id="liquid-gauge-container">
    <div id="liquid-gauge">
        @{ var percentageTop = 100 - Percentage; }
        <div style="top: @(percentageTop < 0 ? 0 : percentageTop > 100 ? 100 : percentageTop)%">
            <svg xmlns="http://www.w3.org/2000/svg" width="100%" height="10px" viewBox="0 0 1440 320" preserveAspectRatio="none">
                <path fill="#1b6ec2" fill-opacity="1" d="M0,96L80,85.3C160,75,320,53,480,85.3C640,117,800,203,960,234.7C1120,267,1280,245,1360,234.7L1440,224L1440,320L1360,320C1280,320,1120,320,960,320C800,320,640,320,480,320C320,320,160,320,80,320L0,320Z"></path>
            </svg>
        </div>
        <span>@(Percentage > 100 ? 100 : Percentage < 0 ? 0 : Percentage)%</span>
    </div>
</div>


@code {
    [Parameter] public int Percentage { get; set; }
}